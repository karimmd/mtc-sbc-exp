# BFT-Smart Configuration for blockchain Integration
# Based on BFT-Smart v1.2.0 library integration with Hyperledger Fabric

# System Configuration
system.servers.num = 7
system.servers.f = 2
system.initial.view = 0

# Server Configuration (Multi-tier deployment)
# Cloud Tier Replicas
system.server.0.network.host = peer0.cloud.local
system.server.0.network.port = 11000
system.server.0.tier = cloud

system.server.1.network.host = peer1.cloud.local  
system.server.1.network.port = 11001
system.server.1.tier = cloud

# Fog Tier Replicas  
system.server.2.network.host = peer0.fog.local
system.server.2.network.port = 11002
system.server.2.tier = fog

system.server.3.network.host = peer1.fog.local
system.server.3.network.port = 11003
system.server.3.tier = fog

system.server.4.network.host = peer2.fog.local
system.server.4.network.port = 11004
system.server.4.tier = fog

# Edge Tier Replicas
system.server.5.network.host = peer0.edge.local
system.server.5.network.port = 11005  
system.server.5.tier = edge

system.server.6.network.host = peer1.edge.local
system.server.6.network.port = 11006
system.server.6.tier = edge

# Communication Configuration
system.communication.defaultkeys = true
system.communication.bindaddress = 0.0.0.0
system.communication.useMACs = 1
system.communication.useSenderThread = 1

# View Synchronization
system.totalordermulticast.log = 1
system.totalordermulticast.log.parallel = 0
system.totalordermulticast.log.logdir = logs/consensus
system.totalordermulticast.log.logsize = 0

# Reconfiguration Support
system.ttp.id = 7
system.reconfiguration.enabled = true
system.reconfiguration.type = incremental

# Performance Tuning for Multi-tier
system.communication.outQueueSize = 100000
system.communication.inQueueSize = 100000
system.totalordermulticast.batchtimeout = 100
system.totalordermulticast.maxbatchsize = 1000

# Fault Tolerance for Edge/Fog Environments  
system.server.maxoffline = 2
system.server.reconnectiontimeout = 5000
system.server.heartbeat.enabled = true
system.server.heartbeat.interval = 1000